<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".study">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="98dp"
        android:layout_marginEnd="99dp"
        android:text="Study Resources"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="93dp"
        android:layout_height="115dp"
        android:layout_marginStart="159dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="159dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/button"
        android:layout_width="196dp"
        android:layout_height="39dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="20dp"
        android:onClick="main"
        android:text="Go to main page"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView36" />

    <Button
        android:id="@+id/button7"
        android:layout_width="278dp"
        android:layout_height="40dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:text="Rule and Regulations"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button8"
        android:layout_width="282dp"
        android:layout_height="38dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="9dp"
        android:text="Signs and Symbols"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView33" />

    <Button
        android:id="@+id/button9"
        android:layout_width="175dp"
        android:layout_height="38dp"
        android:layout_marginStart="107dp"
        android:layout_marginTop="20dp"
        android:onClick="game"
        android:text="Start Quiz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView35" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="10dp"
        android:text="Eg: You may perform hook turns at intersections unless prohibited by a sign posting."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/button10"
        android:layout_width="279dp"
        android:layout_height="41dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="11dp"
        android:text="Safety Instructions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView34" />

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="101dp"
        android:layout_height="67dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button8"
        app:srcCompat="@drawable/pbikelane" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="199dp"
        android:layout_height="68dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="11dp"
        android:text="A protected bikeway is an exclusive area for bicyclists that is physically separated from motor vehicle traffic."
        app:layout_constraintStart_toEndOf="@+id/imageButton9"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="327dp"
        android:layout_height="51dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="15dp"
        android:text="Eg: Sit astride the rider's seat facing forward with at least one hand on the handlebars"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button10" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="307dp"
        android:layout_height="30dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="5dp"
        android:text="Start quiz, gain xp and be on leadership board."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button9" />

</androidx.constraintlayout.widget.ConstraintLayout>